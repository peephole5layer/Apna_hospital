        <section id="signup-page">




            <header>

                <h1>Doctor&nbsp;Booking</h1>
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <div class="spinner-grow" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </header>


            <form action="/users/create-user" method="POST" id="signup-form">

                <div class="d-flex flex-column flex">

                    <div class="p-2 row mb-3 d-flex flex-nowrap">
                        <label for="f-name" class="col-sm-2 col-form-label ">First&nbsp;Name&nbsp;:</label>
                        <div class="col-sm-10" id="check" style="width:140px">

                            <input minlength="3" maxlength="14" name="fname" type="text" class="form-control mg-left-5" placeholder="First name"
                                aria-label="First name" id="f-name" required>


                        </div>

                    </div>
                    <div class="p-2 row mb-3 d-flex flex-nowrap">
                        <label for="l-name" class="col-sm-2 col-form-label">Last&nbsp;Name&nbsp;:</label>
                        <div class="col-sm-10" style="width:140px">

                            <input minlength="3" maxlength="15" name="lname" type="text" class="form-control  mg-left-5" placeholder="Last name"
                                aria-label="Last name" id="l-name" required>

                        </div>

                    </div>
                    <!--             
            <div class="p-2 row mb-3 d-flex flex-nowrap">
                <label  for="adhaar" class="col-sm-2 col-form-label ">Adhaar&nbsp;Number&nbsp;:</label>
                <div class="col-sm-10" id="check">

                    <input name="adhaar" type="number" class="form-control mg-left-5" placeholder="xxxxxxx" aria-label="Adhaar number" id="adhaar" required>
                </div>
                
              </div>  -->

                    <div class="p-2 row mb-3 d-flex flex-nowrap">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email&nbsp;:</label>
                        <div class="col-sm-10" style="width:140px">
                            <input maxlength="32" type="email" name="email" class="form-control mg-left-5" id="inputEmail3"
                                placeholder="xyz@123.com" required>
                        </div>
                    </div>
                    <div class="p-2 row mb-3 d-flex flex-nowrap">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Password&nbsp;:</label>
                        <div class="col-sm-10" style="width:140px">
                            <input minlength="8" type="password" name="password" class="form-control  mg-left-5" id="inputPassword3"
                                placeholder="********" required>
                        </div>
                    </div>

                    <div  class="p-2 row mb-3 d-flex flex-nowrap">
                        <label id="confirm-pass" for="confirm-password3"
                            class="col-sm-2 col-form-label">Confirm&nbsp;Password&nbsp;:</label>
                        <div class="col-sm-10" style="width:140px">
                            <input minlength="10" type="password" name="confirm_password" class="form-control mg-left-5"
                                id="confirm-password3" placeholder="********" required>
                        </div>
                    </div>
                    <div id="signup-submit-container">
                        <div  id="signup-button">
                            <button type="submit" >Sign up</button>
                         </div>
        
                    </div>
                </div>
            </form>



            <div id="divider-container">

                <!-- <span>x</span> -->
                <p id="x1">x</p>

                <div class="line-break"> </div>

                <p>x&nbsp;&nbsp;<span>or</span>&nbsp;&nbsp;x</p>

                <div class="line-break"></div>


                <p id="x2">x</p>


            </div>









            <div id="google-signin" class="d-grid gap-2">

                <button onclick="window.location.href='/users/auth/google';" class="btn btn-primary" type="button">
                    <i class="fa-brands fa-google fa-fade"></i>
                    Continue with Google</button>
            </div>






